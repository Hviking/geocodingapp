public class NewThread extends Thread {
    protected boolean m_isSuspend = false;
    protected boolean m_isStop = false;

    public void setSuspend(boolean sleep) {
        this.m_isSuspend = sleep;
    }

    public void setStop(boolean stop) {
        this.m_isStop = stop;
    }
    
}
